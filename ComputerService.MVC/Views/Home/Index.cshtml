@{
    ViewData["Title"] = "Home Page";

}
<div id="carouselExampleCaptions" class="carousel slide" style="width:100%;">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/serwis-komputerow.jpg" class="d-block w-100" alt="nima" style="height: 500px;">
            <div class="carousel-caption d-none d-md-block ">
                <h5>Serwis Konputerowy</h5>
                <p>Oferujemy profesjonalne obsługę firm i klientów indywidualnych.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/zadowolony.jpg" class="d-block w-100" alt="nima" style="height: 500px;">
            <div class="carousel-caption d-none d-md-block">
                <h5>Zadowoleni klienci</h5>
                <p>Zawsze dokładdamy wszelkich starań aby każdy klient był zadowolny z naszych usług </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/naprawa-zdalna.jpg" class="d-block w-100" alt="nima" style="height: 500px;">
            <div class="carousel-caption d-none d-md-block">
                <h5>Naprawa bez wychodzenia z domu</h5>
                <p>Dojazd do domu klienta w obszarze 50 km od zakładu jest w standardzie.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="row row-cols-1 row-cols-md-2 g-4 mt-1">
    <div class="col">
        <a asp-area="" asp-controller="Home" asp-action="Contact" class="text-black" style="text-decoration: none;">
            <div class="card">
                <img src="~/images/service.jpg" class="card-img-top" alt="nima" style="height:847px">
                <div class="card-body">
                    <h5 class="card-title">Kontakt</h5>
                    <p class="card-text">Jeśli masz jakieś pytania skontaktuj sie z nami</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <a asp-area="" asp-controller="Home" asp-action="Contact" class="text-black" style="text-decoration: none; ">
            <div class="card">
                <img src="~/images/pomoczdalna.png" class="card-img-top" alt="nima" style="height:847px">
                <div class="card-body">
                    <h5 class="card-title">Zdalna pomoc</h5>
                    <p class="card-text">Jeżęli interesuje cię zdalna pomoc zadzwoń do konsultanta</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <a asp-area="" asp-controller="Home" asp-action="Offer" class="text-black" style="text-decoration: none; ">
            <div class="card">
                <img src="~/images/nvidia.jpg" class="card-img-top" alt="nima" style="height:847px">
                <div class="card-body">
                    <h5 class="card-title">Wymiana podzespołów</h5>
                    <p class="card-text">Jeżeli interesuje cię wymiana jakiegoś podzespołu sprawdź czy oferujemy takie usługi</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <a asp-area="" asp-controller="Home" asp-action="Offer" class="text-black" style="text-decoration: none; ">
            <div class="card">
                <img src="~/images/data-recovery.jpg" class="card-img-top" alt="nima" style="height:847px">
                <div class="card-body">
                    <h5 class="card-title">Odzyskiwanie danych</h5>
                    <p class="card-text">Jeśli interesuje cię odzyskiwanie danych z dysku bądź trwałe usuwanie danych sprawdź ofertę</p>
                </div>
            </div>
        </a>
    </div>
</div>
