@model ComputerService.Application.ComputerService.ComputerServiceDto

@{
    ViewData["Title"] = "Details";
}

    <h1>@Model.Name</h1>

<div >
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Opis:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Numer telefonu:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            Ulica:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class = "col-sm-2">
            Miasto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            Kod pocztowy:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
    </dl>
</div>
<div >

    @if (Model.IsEditable)
    {
        <a class="btn btn-outline-secondary" asp-controller="ComputerService" asp-action="Edit" asp-route-encodedName="@Model.EncodedName">Edytuj</a>
    }
    <a asp-action="Index" class="btn btn-outline-secondary">Cofnij</a>
</div>
