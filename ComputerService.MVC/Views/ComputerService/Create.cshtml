@using ComputerService.Application.ComputerService.Commands.CreateComputerService;

@model CreateComputerServiceCommand
<h1>Create Car Workshop</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/ComputerService/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Name">Nazwa</label>
                <input class="form-control" type="text" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="Description">Opis</label>
                <input class="form-control" type="text" asp-for="Description">
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="PhoneNumber">Numer telefonu</label>
                <input class="form-control" type="text" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>

            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Street">Ulica</label>
                <input class="form-control" type="text" asp-for="Street">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="City">Miasto</label>
                <input class="form-control" type="text" asp-for="City">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="PostalCode">Kod Pocztowy</label>
                <input class="form-control" type="text" asp-for="PostalCode">
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Zapisz" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}